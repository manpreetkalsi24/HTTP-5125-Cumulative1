<style>

    /* style properties for displaying  */
    .main {
        display: flex;
    }

    .card {
        width: 30%;
        margin: 20px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
        font-family: Arial, sans-serif;
    }

        .card h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 20px
        }

        .card p {
            margin: 10px 0;
            font-size: 16px;
        }

    #delete_btn {
        display: inline-block;
        background: red;
        color: white;
        padding: 7px 15px;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 20px;
    }

</style>

@model SchoolMVP.Models.Course

<a href="/CoursePage/CourseList">Back to List</a>
<div class="main">
    <div class="card">
        <h2>Course Details</h2>
        <p><strong>Course ID:-</strong> @Model.CourseId</p>
        <p><strong>Course Name:-</strong> @Model.CourseName</p>
        <p><strong>Course Code:-</strong> @Model.CourseCode</p>
        <p><strong>Start Date:-</strong> @Model.StartDate.ToShortDateString()</p>
        <p><strong>End Date:-</strong> @Model.FinishDate.ToShortDateString()</p>
        <p><strong>Teacher ID:-</strong> @Model.TeacherId</p>

    </div>

</div>

<a id="delete_btn" href="/CoursePage/DeleteConfirm/@Model.CourseId">Delete</a>



