<style>

    /* style properties for displaying  */
    .main {
        display: flex;
    }

    .card {
        width: 30%;
        margin: 20px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
        font-family: Arial, sans-serif;
    }

        .card h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 20px
        }

        .card p {
            margin: 10px 0;
            font-size: 16px;
        }

    #delete_btn {
        display: inline-block;
        background: red;
        color: white;
        padding: 7px 15px;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 20px;
    }

</style>

@model SchoolMVP.Models.Student

<a href="/StudentPage/StudentList">Back to List</a>
<div class="main">
    <div class="card">
        <h2>Student Details</h2>
        <p><strong>Student ID:-</strong> @Model.StudentId</p>
        <p><strong>Student Name:-</strong> @Model.StudentFname @Model.StudentLname</p>
        <p><strong>Student Number:-</strong> @Model.StudentNumber</p>
        <p><strong>Enrolment Date:-</strong> @Model.EnrolDate.ToShortDateString()</p>
        
    </div>

</div>

<a id="delete_btn" href="/StudentPage/DeleteConfirm/@Model.StudentId">Delete</a>



